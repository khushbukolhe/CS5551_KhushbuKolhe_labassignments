<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="10px"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_walmart"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtMSRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSRP : "
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/imageView_walmart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtSalePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SalePrice : "
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/txtMSRP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : "
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_walmart"
        android:layout_toEndOf="@+id/imageView_walmart"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_below="@+id/txtID"
        android:layout_toRightOf="@+id/imageView_walmart"
        android:layout_toEndOf="@+id/imageView_walmart"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@+id/imageView_walmart"
        android:layout_toEndOf="@+id/imageView_walmart"
        android:textStyle="bold"/>
</RelativeLayout>