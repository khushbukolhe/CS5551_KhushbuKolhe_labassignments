<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img1"
    tools:context="com.example.khushbukolhe.androidwearapplication.MainActivityWear"

    tools:deviceIds="wear_round">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/know_fitness"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editext_cityname"
        android:hint="Enter your favourite dish"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_bright"
        android:onClick="getNutrition"
        android:text="Get Nutirtion Data!" />

    <TextView
        android:hint="Nutrition Details!!"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_display"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/button2"
        android:textColor="@color/black"
        android:layout_marginLeft="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

